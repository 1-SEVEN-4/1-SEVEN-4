{
  "extends": ["airbnb-base", "plugin:prettier/recommended", "prettier"],
  "rules": {
    "import/extensions": "off",
    "import/prefer-default-export": false,
    "no-console": "off",
    "no-unused-vars": "off",
    "semi": ["error", "always"],
    "object-curly-newline": ["error", { "multiline": true, "consistent": true }],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "auto"
      }
    ]
  }
}
